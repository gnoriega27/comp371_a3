#version 330 core

//Some of the organization and structural ideas taken and modified from the lab code and http://learnopengl.com
//Simple vertex shader used for the rendering of the depth map.

//Object information
layout (location = 0) in vec3 position;

//MVP Matrices
uniform mat4 lightSpaceTransform;
uniform mat4 mm;


void main()
{
    gl_Position = lightSpaceTransform * mm * vec4(position, 1.0);
}
