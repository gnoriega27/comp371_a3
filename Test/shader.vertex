#version 330 core

//Some of the organization and structural ideas taken and modified from the lab code and http://learnopengl.com

//Object information
layout (location = 0) in vec3 position;
layout (location = 1) in vec3 normals;

//MVP Matrices
uniform mat4 mm;
uniform mat4 vm;
uniform mat4 pm;
uniform mat4 lightSpaceTransform;

//Variables that are going to be sent out to the fragment shader
out vec3 normal;
out vec3 fragment_position;
out vec4 fragment_position_light_space;

void main()
{
    fragment_position = vec3(mm * vec4(position, 1.0));
    normal = mat3(mm) * normals;
    fragment_position_light_space = lightSpaceTransform * vec4(fragment_position, 1.0);
    gl_Position = pm * vm * mm * vec4(position, 1.0);
}
